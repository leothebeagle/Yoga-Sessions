<h2>Sign up as a new teacher</h2>

<%= form_for @teacher do |f| %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %> <br><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %> <br><br>

    <%= f.label :email %>
    <%= f.text_field :email %> <br><br>

    <%= f.label :bio %>
    <%= f.text_area :bio %> <br><br>

    <%= f.label :password %>
    <%= f.password_field :password %> <br><br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %> <br><br>

    <%= f.submit %>


<% end %>
