<% @programs.each do |program| %>
    <p>
        <h4><%= link_to program.name, program_path(program) %></h4><br>
        <%= program.description %><br>
        By: <%= program.teacher.first_name %> <%= program.teacher.last_name %><br>
        
    </p>
<% end %>

    <% if @current_teacher %>
        <%= link_to "Create a new Program", new_program_path %><br>
        <%= link_to "Back to profile page", teacher_path(@current_teacher) %>
    <% end %>

    <% if @current_student %>
        <%= link_to "Back to profile page", student_path(@current_student) %>
    <% end %>

